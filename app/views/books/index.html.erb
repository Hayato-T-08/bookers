<h1>Books</h1>
<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

<div style="margin-bottom: 10px">
  <label>Title</label>
  <br>
  <%= f.text_field :title %>
</div>

  
<div style="margin-bottom: 10px">
  <label>Body</label>
  <br>
  <%= f.text_area :body %>
</div>

  <%= f.submit 'Create Book' %>
  
<% end %>