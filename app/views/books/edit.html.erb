<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-msg">
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url:"/books/#{@book.id}", method: :patch do |f| %>

<div style="margin-bottom: 10px">
  <label>Title</label>
  <br>
  <%= f.text_field :title %>
</div>


<div style="margin-bottom: 10px">
  <label>Body</label>
  <br>
  <%= f.text_area :body %>
</div>

  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", "/books/#{@book.id}" %>
